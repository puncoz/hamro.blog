<MainLayout title="Hamro Blog - A Developer Community Blog Platform">
	<!-- Hero Section with Featured Articles -->
	<section
		class="py-12 md:py-20 bg-gradient-to-r from-primary/10 to-secondary/10"
	>
		<div class="container">
			<div class="text-center mb-12">
				<h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-4">
					Developer Community Blog
				</h1>
				<p class="text-xl text-muted-foreground max-w-3xl mx-auto">
					A platform for developers to share their knowledge,
					experiences, and insights with the community.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				{
					featuredArticles.map((article) => (
						<div class="group relative overflow-hidden rounded-lg border bg-background shadow-md transition-all hover:shadow-xl">
							<a
								href={`/blogs/${article.id}`}
								class="absolute inset-0 z-10"
							/>
							<div class="aspect-video overflow-hidden">
								<img
									src={article.image}
									alt={article.title}
									class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
								/>
							</div>
							<div class="p-6">
								<div class="flex items-center gap-2 mb-3">
									{article.tags.slice(0, 2).map((tag) => (
										<span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2">
											{tag}
										</span>
									))}
								</div>
								<h3 class="text-xl font-bold leading-tight mb-2 line-clamp-2">
									{article.title}
								</h3>
								<p class="text-muted-foreground mb-4 line-clamp-2">
									{article.excerpt}
								</p>
								<div class="flex items-center justify-between">
									<div class="flex items-center gap-2">
										<img
											src={article.author.avatar}
											alt={article.author.name}
											class="h-8 w-8 rounded-full object-cover"
										/>
										<span class="text-sm font-medium">
											{article.author.name}
										</span>
									</div>
									<span class="text-xs text-muted-foreground">
										{article.date}
									</span>
								</div>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</section>

	<!-- Author List Section -->
	<section class="py-12 bg-muted/50">
		<div class="container">
			<div class="text-center mb-12">
				<h2 class="text-3xl font-bold tracking-tight mb-4">
					Meet Our Authors
				</h2>
				<p class="text-muted-foreground max-w-2xl mx-auto">
					Learn from experienced developers who share their knowledge
					and expertise.
				</p>
			</div>

			<div
				class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6"
			>
				{
					authors.map((author) => (
						<div class="flex flex-col items-center text-center p-6 rounded-lg bg-background border shadow-sm hover:shadow-md transition-shadow">
							<img
								src={author.avatar}
								alt={author.name}
								class="h-24 w-24 rounded-full object-cover mb-4"
							/>
							<h3 class="text-lg font-medium mb-1">
								{author.name}
							</h3>
							<p class="text-sm text-muted-foreground mb-3 line-clamp-2">
								{author.bio}
							</p>
							<div class="text-xs text-muted-foreground">
								{author.articles} Articles
							</div>
							<a
								href={`/authors/${author.id}`}
								class="mt-4 inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2"
